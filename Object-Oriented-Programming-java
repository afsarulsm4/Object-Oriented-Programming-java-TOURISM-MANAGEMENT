    private static void VehicleManagement() {
        JFrame d = new JFrame("Vehiclemanagement");
        JLabel l1 = new JLabel(" Vehiclemanagement ");
        l1.setBounds(150, 5, 400, 100);
        Font labelFont = new Font(l1.getFont().getName(), Font.BOLD, 18);
        l1.setFont(labelFont);

        CheckNow checkNow = new CheckNow();
        checkNow.setVisible(true);

        d.add(l1);
        d.add(checkNow);
        d.setSize(400, 400);
        d.setLayout(null);
        d.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        d.setVisible(true);
    }
public static class CheckNow extends JFrame implements ActionListener {

        JRadioButton rb1, rb2;
        JButton z;

        CheckNow() {
            rb1 = new JRadioButton("Bus");
            rb1.setBounds(125, 70, 130, 70);
            rb2 = new JRadioButton("Car");
            rb2.setBounds(125, 120, 130, 70);
            ButtonGroup bg = new ButtonGroup();
            bg.add(rb1);
            bg.add(rb2);
            z = new JButton("click");
            z.setBounds(120, 200, 80, 30);
            z.addActionListener(this);
            add(rb1);
            add(rb2);
            add(z);
            setSize(400, 400);
            setLayout(null);
            setVisible(true);
        }

        public void actionPerformed(ActionEvent e) {
            if (rb1.isSelected()) {
                JOptionPane.showMessageDialog(this, "Bus Selected.");
            }
            if (rb2.isSelected()) {
                JOptionPane.showMessageDialog(this, "Car Selected.");
            }
        }
    }

    }
